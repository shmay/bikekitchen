<div id='errors' class='alert alert-error hide'>
  <h4>Errors:</h4>
  <ul></ul>
</div>
<div id='success' class='alert alert-success hide'>
  <h4>Successfully saved!</h4>
</div>
<form id="new-event" name="event" class="form-horizontal">
  <fieldset>
    <div class="control-group">
      <label class='control-label' for="time">
        <span class='label label-info'>Main Guy</span>
      </label>
      <div class="controls">
        <div class="input">
          <input id="name" name="name" size="30" type="text" <% if (event.name) { %> value="<%= event.name %>" <% } %>>
        </div>
      </div>
    </div>
    <div class="control-group">
      <label class='control-label' for="time">
        <span class='label label-info'>Time</span>
      </label>
      <div class='controls'>
        <input class='input' type="text" name="time" id="time" <% if (event.time) { %> value="<%= event.time %>" <% } %>>
        <p class='help-block'>E.G. 11-12:15pm, 4-6pm, 9:15-10am, etc.</p>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="slots">Slots</label>
      <div class="controls">
        <select name='slots' id="slots" style='width:50px;'>
          <% _.each([0,1,2,3,4,5], function(n) { %>
            <option value='<%=n%>'><%=n%></option>
          <% }); %>
        </select>
      </div>
    </div>
    <div class='controls'>
      <input class='input btn btn-primary' type='submit' value='<% if (event.id) {%>Update<%} else {%>Create<%}%> Event' />
    </div>
  </fieldset>
</form>
